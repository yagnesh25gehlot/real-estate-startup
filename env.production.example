# Railway Production Environment Variables
# Copy this to .env in Railway dashboard

# Database Configuration
DATABASE_URL=postgresql://postgres:zsRbzKWWgdypYUCscVHwYmoOYVoSmLxL@postgres.railway.internal:5432/railway
DATABASE_PUBLIC_URL=postgresql://postgres:zsRbzKWWgdypYUCscVHwYmoOYVoSmLxL@ballast.proxy.rlwy.net:47133/railway

# Application Configuration
NODE_ENV=production
PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (will be set by Railway)
FRONTEND_URL=https://your-app-name.railway.app

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Configuration (if using Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Google OAuth (if using Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS Configuration
CORS_ORIGIN=https://your-app-name.railway.app
